  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Launch",
      "program": "${workspaceFolder}/builddir/a.out",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "meson build",
      "initCommands": [
        "settings set target.disable-aslr false"
      ],
      "stdio": [
        "${input:inputFile}",
        null,
        null
      ]
    },
  ],
  "inputs": [
    {
      "id": "inputFile",
      "type": "pickString",
      "default": "",
      "description": "테스트로 사용할 인풋 파일 선택",
      "options": [
        "./cases/sample-Basic.1.in",
        "./cases/sample-Basic.2.in",
        "./cases/sample-Basic.3.in",
        "./cases/sample-Advance.1.in",
        "./cases/sample-Advance.2.in",
        "./cases/sample-Advance.3.in",
      ]
    }
  ]
}
